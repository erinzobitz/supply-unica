<div class="about-us {% if section.settings.show_dark_background %}index-section--dark{% endif %}">
  <div class="page-width">
    <div class="about-us__text-container">
      <h2 class="text-center">{{ section.settings.text }}</h2>
      <div class="text-center">
        <a href="{{ section.settings.link }}" class="link--secondary">{{ section.settings.link_text }}</a>
      </div>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "About Us",
    "class": "index-section index-section--flush" ,
    "settings": [
      {
        "type": "checkbox",
        "id": "show_dark_background",
        "label": "COLLECTIONS Dark Background",
        "default": true
      },
      {
        "type": "text",
        "id": "text",
        "label": "Text"
      },
      {
        "type": "text",
        "id": "link_text",
        "label": "Link Text",
        "default": "About Us"
      },
      {
        "type": "url",
        "id": "link",
        "label": "Link"
      }
    ],
    "presets": [
      {
        "name": "About Us",
        "category": "Text"
      }
    ]
  }
{% endschema %}
